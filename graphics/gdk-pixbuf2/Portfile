# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
# Introspection prot group doesn't work with meson, do it by hand
#PortGroup          gobject_introspection 1.0
PortGroup           meson 1.0

name                gdk-pixbuf2
set my_name         gdk-pixbuf
epoch               2
version             2.38.0
license             LGPL
set branch          [join [lrange [split ${version} .] 0 1] .]
categories          graphics
maintainers         {devans @dbevans} openmaintainer
homepage            http://www.gtk.org/
platforms           darwin
distname            ${my_name}-${version}
use_xz              yes

description         The gdk-pixbuf-2.0 library

long_description    ${description}

master_sites        gnome:sources/${my_name}/${branch}/

checksums           rmd160  fe9ea05c11541496d05897af7413b797b8317f6f \
                    sha256  dd50973c7757bcde15de6bcd3a6d462a445efd552604ae6435a0532fbbadae47 \
                    size    5229368

depends_build       port:pkgconfig \
                    port:meson

depends_lib         path:lib/pkgconfig/glib-2.0.pc:glib2 \
                    port:shared-mime-info \
                    port:libpng \
                    port:jasper \
                    port:jpeg \
                    port:tiff \
                    port:gobject-introspection

# Patch for upstream commit 2335d219.  
#  "Workaround to install modules with .so suffix on osx"
patchfiles          name-suffix.diff

license_noconflict  gobject-introspection

configure.args      -Djasper=true -Dgir=true -Dinstalled_tests=false

test.run            yes
test.target         check

post-activate {
        system "${prefix}/bin/gdk-pixbuf-query-loaders --update-cache"
}

variant bundle description {Enable application bundle relocation support} {
    configure.args-append   -Drelocatable=true
}

variant x11 conflicts quartz {
    depends_lib-append      port:xorg-libX11
    configure.args-append   -Dx11=true
}

variant quartz conflicts x11 {
    configure.args-append   -Dx11=false
}

if {![variant_isset quartz]} {
    default_variants    +x11
}

livecheck.type      gnome
livecheck.name      ${my_name}
