if {${name} ne ${subport}} {
    depends_build-append    port:cyrus-sasl2 \
                            path:lib/libssl.dylib:openssl

    configure.args-append   --enable-mongodb \
                            --with-mongodb-sasl=${prefix} \
                            --with-openssl-dir=${prefix}
}
